<script>
    (function () {
        const slider = document.getElementById('pro-features_slider');
        const sliderNavigation = slider.querySelector('.pr-slider-navigation');
        let activeTab = slider.querySelector('.pr-tab-button.tab--active');
        sliderNavigation.addEventListener('mouseover', changeSlide);

        function changeSlide(event) {
            const currentTab = event.target.closest('.pr-tab-button');
            if (currentTab) {
                const currentSlide = slider.querySelector('.pr-slide--active');
                const nextSlide = document.getElementById('pr-slide-' + currentTab.dataset.slideId);
                if (activeTab !== currentTab) {
                    activeTab.classList.remove('tab--active')
                    activeTab = currentTab;
                    activeTab.classList.add('tab--active');
                }
                currentSlide.classList.remove('pr-slide--active');
                nextSlide.classList.add('pr-slide--active');
            }
        }
    })()
</script>
