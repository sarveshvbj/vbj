<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="style-src">
            <values>
                <value id="googleFontsApi" type="host">https://fonts.googleapis.com</value>
            </values>
        </policy>
        <policy id="font-src">
            <values>
                <value id="googleFontsStatic" type="host">https://fonts.gstatic.com</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="data-image" type="host">data:</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
