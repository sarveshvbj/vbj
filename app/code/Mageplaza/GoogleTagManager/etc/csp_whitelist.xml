<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="mp-googletagmanager-script" type="host">*.googletagmanager.com</value>
                <value id="mp-facebook-script" type="host">*.facebook.net</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="mp-facebook-img" type="host">*.facebook.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="mp-google-analytics-connect" type="host">*.google-analytics.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
