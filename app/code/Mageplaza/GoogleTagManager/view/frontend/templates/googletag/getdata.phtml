use Mageplaza\GoogleTagManager\Block\Tag\ManagerTag;

/** @var ManagerTag $block */
$dataLayerObject = $block->getGtmDataLayer();
?>

<?php if ($block->canShowGtm()) : ?>
    <!-- Google Tag Manager (noscript) Added by Mageplaza-->
    <noscript>
        <iframe src="https://www.googletagmanager.com/ns.html?id=<?= $block->escapeHtmlAttr($block->getTagId()) ?>"
                height="0" width="0" style="display:none;visibility:hidden"></iframe>
    </noscript>
    <!-- End Google Tag Manager (noscript) -->
    <?php if (!empty($dataLayerObject)) : ?>
        <!-- Google Tag Manager DataLayer Added by Mageplaza-->
        <?php if ($block->isMultiShipping()) : ?>
            <?php $dataLayerObject = $block->decodeJs($dataLayerObject) ?>
            <?php foreach ($dataLayerObject as $data) : ?>
                <script>
                    dataLayer.push(<?= /** @noEscape */ $block->encodeJs($data); ?>);
                </script>
            <?php endforeach; ?>
        <?php else : ?>
            <script>
                dataLayer.push(<?= /** @noEscape */ $dataLayerObject; ?>);
            </script>
        <?php endif; ?>
        <!-- End Google Tag Manager DataLayer Added by Mageplaza-->
    <?php endif; ?>
<?php endif; ?>
