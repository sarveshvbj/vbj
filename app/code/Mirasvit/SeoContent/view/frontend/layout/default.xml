<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Mirasvit\SeoContent\Block\Description" name="mst.seo-content.description.content"
                   template="Mirasvit_SeoContent::description.phtml" after='-'>
                <arguments>
                    <argument name="position" xsi:type="string">content</argument>
                </arguments>
            </block>
        </referenceContainer>

        <referenceContainer name="before.body.end">
            <block class="Mirasvit\SeoContent\Block\Description" name="mst.seo-content.description.bottom"
                   template="Mirasvit_SeoContent::description.phtml" after='-'>
                <arguments>
                    <argument name="position" xsi:type="string">bottom</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>